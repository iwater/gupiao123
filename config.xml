<?xml version="1.0" encoding="UTF-8" ?>
  <widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id    = "cn.gupiao123.app"
    versionCode="10" 
    version   = "0.9.2.031101">

  <!-- versionCode is optional and Android only -->

  <name>股票123</name>

  <description>
    股票123
  </description>

  <author href="https://gupiao123.cn" email="iwater@gmail.com">
    股票行情资讯
  </author>

  <preference name="orientation" value="portrait" />
  <preference name="target-device" value="handset" />
  <preference name="fullscreen" value="false" />
  <preference name="webviewbounce" value="false" />
  <preference name="prerendered-icon" value="true" />
  <preference name="detect-data-types" value="false" />
  <preference name="phonegap-version" value="2.7.0" />
  
  <icon src="res/images/webapp/logo57.png" />
  <icon src="res/images/webapp/logo57.png" width="57" height="57" />
	<icon src="res/images/webapp/logo72.png" gap:platform="ios" width="72" height="72" />
	<icon src="res/images/webapp/logo114.png" width="114" height="114" />
	<icon src="res/images/webapp/logo144.png" width="144" height="144" />
	<icon src="res/images/webapp/logo57.png" gap:platform="android" gap:density="ldpi" />
	<icon src="res/images/webapp/logo72.png" gap:platform="android" gap:density="mdpi" />
	<icon src="res/images/webapp/logo114.png" gap:platform="android" gap:density="hdpi" />
	<icon src="res/images/webapp/logo144.png" gap:platform="android" gap:density="xhdpi" />
	
	<gap:splash src="res/images/webapp/Default@2x.png" width="640" height="960" />
	
  <plugins>
    <plugin name="InAppBrowser" value="CDVInAppBrowser" />
    <plugin name="SplashScreen" value="CDVSplashScreen" />
